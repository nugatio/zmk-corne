// DEFINITION

keymap {
    compatible = "zmk,keymap";

// layer names
#define BASE 0
#define RGHT 1
#define LEFT 2

// base
base_layer {
    /* base layer layout
         ╭─────────────────────╮ ╭─────────────────────╮
    ESC  │  X   W   M   G   !? │ │ #$  .:  "'   J   B  │ VUP
    Z    │  S   C   N   T   K  │ │ ,;   A   E   I   H  │ VM
    CAPS │  V   P   L   D   /* │ │ -+   U   O   Y   F  │ VDN
         ╰───────╮  Q   R  BSP │ │ SPC RET TAB ╭───────╯
                 ╰─────────────╯ ╰─────────────╯
    */

    /* base layer hold layout
         ╭─────────────────────╮ ╭─────────────────────╮
         │                     │ │                     │
         │  LC  LA  LG  LS     │ │     RS  RG  RA  RC  │
         │                     │ │                     │
         ╰───────╮  L4  L3  L2 │ │ L1  L3  L4  ╭───────╯
                 ╰─────────────╯ ╰─────────────╯
    */

    display-name = "BASE";
    bindings = <
    &kp ESC   &kp X        &kp W       &kp M       &kp G        &mseq    &mshd           &msdc        &msds       &kp J       &kp B        &msvup
    &kp Z     &hm LCTRL S  &hm LALT C  &hm LCMD N  &hm LSHFT T  &kp K    &mscs           &hm RSHFT A  &hm RCMD E  &hm RALT I  &hm RCTRL H  &msvmp
    &kp CAPS  &kp V        &kp P       &kp L       &kp D        &msfs    &msmp           &kp U        &kp O       &kp Y       &kp F        &msvdn
                                       kp Q        &kp R        &msbb    &lt RGHT SPACE  &kp RET      &kp TAB
    >;
};

// TODO

// right
symbol_function_layer {
    display-name = "RGHT";
    bindings = <
    &none  &none     &none     &none      &kp CARET  &none      &none  &kp F7  &kp F8  &kp F9  &kp F12  &none
    &none  &kp BSLH  &kp PIPE  &kp PRCNT  &kp AMPS   &none      &none  &kp F4  &kp F5  &kp F6  &kp F11  &none
    &none  &none     &none     &none      &none      &none      &none  &kp F1  &kp F2  &kp F3  &kp F10  &none
                               &none      &kp INS    &kp DEL    &none  &none   &none
    >;
};

// left
numpad_navigation_layer {
    display-name = "LEFT";
    bindings = <
    &none  &none    &none      &none      &kp C_BRI_UP  &none    &kp FSLH  &kp N7   &kp N8  &kp N9  &kp EQUAL  &none
    &none  &kp END  &kp PG_DN  &kp PG_UP  &kp HOME      &none    &kp STAR  &kp N4   &kp N5  &kp N6  &kp PLUS   &none
    &none  &none    &none      &none      &kp C_BRI_DN  &none    &none     &kp N1   &kp N2  &kp N3  &kp MINUS  &none
                               &none      &none         &none    &kp N0    &kp DOT  &none
    >;
};
};
